@using DreamWallHub.Core.ViewModels
@model UserEditViewModel
@{
    ViewData["Title"] = "User Management";
}
<section id="action" class="action bg-primary roomy-50">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <form id="edit" method="post">
                    <input type="hidden" name="Id" value="@Model.UserId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" aria-required="true" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" aria-required="true" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" aria-required="true" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-4">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}