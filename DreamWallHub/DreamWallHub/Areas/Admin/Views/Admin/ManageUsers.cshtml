@using DreamWallHub.Core.ViewModels
@model IEnumerable<UserListViewModel>
@{
}

<hr />
<hr />
<hr />
<hr />
<hr />
<hr />
<div class="card-outline card-primary" style="width:50% ; margin:0 auto">
    <div class="container">
        <h4 class="card-title text-primary center-side">User Panel</h4>
        <div class="card-tools">
            <div class="input-group input-group-sm" style="width: 20%;">
            </div>
        </div>
    </div>


    <div class="card-body table-responsive p-0">
        <table class="table text-nowrap">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-area="admin" asp-action="edit" asp-controller="admin" asp-route-id="@user.UserId" class="btn btn-block btn-outline-info btn-xs">Edit</a>
                            <a asp-area="admin" asp-action="roles" asp-controller="admin" asp-route-id="@user.UserId" class="btn btn-block btn-outline-warning btn-xs">Roles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

