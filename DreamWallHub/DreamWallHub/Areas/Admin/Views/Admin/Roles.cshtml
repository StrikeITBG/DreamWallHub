@using DreamWallHub.Core.ViewModels
@model EditRolesViewModel
@{
    ViewData["Title"] = "Roles Management";
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}
<section id="action" class="action bg-primary roomy-50">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <form id="roles" method="post">
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                    <input type="hidden" name="Name" value="@Model.UserName" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating text-white">
                        <h3>User: @Html.DisplayFor(m => m.UserName)</h3>
                    </div>
                    <div class="form-floating">
                        <div class="form-group">
                            <label class="text-white">User Roles</label>
                            <select asp-for="RoleNames" asp-items="@items" class="form-control text-black">
                            </select>
                        </div>
                    </div>
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-4">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>