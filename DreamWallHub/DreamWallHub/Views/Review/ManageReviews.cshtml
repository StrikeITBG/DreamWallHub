@using DreamWallHub.Infrastructure.Data
@model IEnumerable<Review>

<div class="row">
	<div class="col-12">
		<div class="text-white">
			<div class="card-header">
				<h3 class="card-title">Project Reviews</h3>
				<div class="card-tools row">
				</div>
			</div>

			<div class="card-body table-responsive p-0">
				<table class="text-white table text-nowrap">
					<thead>
						<tr>
							<th>Project Name</th>
							<th>Username</th>
							<th>Date</th>
							<th>Description</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var review in Model)
						{
							<tr>
								<td>@review.Project.ProjectName</td>
								<td>@review.Creator.UserName</td>
								<td>@review.Date</td>
								<td>@review.Description</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>