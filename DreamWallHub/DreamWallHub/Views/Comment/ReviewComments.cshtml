@using DreamWallHub.Infrastructure.Data
@model dynamic

<div class="section-title">
    <h4>Review</h4>
</div>

<div class="review__item" style="height: fit-content;">
    <div class="review__item__text">
        <h6>@Model.Review.Creator.UserName <span>@Model.Review.Date</span> </h6>
        <p>
            <textarea name="Description" class="custom-text-area" disabled>@Model.Review.Description</textarea>
        </p>
    </div>
</div>

<br />
<div class="card-outline card-primary" style="width:20% ; margin:0 auto">
    <div style="margin-top:40px;">
        <div class="section-title">
            <h5>Write a Comment</h5>
        </div>
        <form id="createComment" enctype="multipart/form-data" method="post">
            <hr />
            <div class="form-group">
                <div class="form-group">
                    <input value="@Model.Review.Id" name="ReviewId" type="hidden" class="form-control" />
                </div>
                <textarea value="@ViewBag.Description" name="Description" placeholder="Your Comment Text" rows="3" cols="126" class="custom-text-area" style="margin-bottom: 0px; width: 100%;"></textarea>
            </div>
            <br />
              <div class="text-center">
            <button type="submit" value="Submit" class="w-100 btn btn-lg btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <div class="details__review" style="margin-top:80px;">
        <div class="section-title" style="margin-top:20px;">
            <h5>Review Comments</h5>
        </div>
        @foreach (var comment in Model.Comments)
        {
            <div class="review__item" style="height: fit-content;">
                <div class="review__item__text">
                    <h6>@comment.User.UserName <span>@comment.Date</span></h6>
                    <p>
                        <textarea name="Description" class="custom-text-area" disabled>@comment.Description</textarea>
                    </p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
